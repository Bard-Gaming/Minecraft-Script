function particle = () => {
    command("particle minecraft:end_rod ~ ~ ~ 0 0 0 0 1 force");
}

function log_block = () => {
    log(get_block("~", "~", "~"));
}

function main = () => {
    @a[tag=block_info] raycast_block(make_entity_glow, 10, particle);
}

function kill = () => {
    @a[tag=block_info] command("tag @s remove block_info");
}
